<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="dist" name="AccountGenerator">
    <property environment="env"/>
    <property name="ECLIPSE_HOME" value="../../../../eclipse-jee-mars-R-win32-x86_64/eclipse/"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.7"/>
    <property name="source" value="1.7"/>
    <path id="AccountGenerator.classpath">
        <pathelement location="bin"/>
        <pathelement location="jgoodies-forms-1.8.0.jar"/>
        <pathelement location="miglayout15-swing.jar"/>
    </path>
    <target name="init" depends="clean">
    	<tstamp></tstamp>
        <mkdir dir="bin"/>
    	<mkdir dir="dist"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    	<delete dir="dist"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="AccountGenerator.classpath"/>
        </javac>
    </target>
    <target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects"/>
    <target description="copy Eclipse compiler jars to ant lib directory" name="init-eclipse-compiler">
        <copy todir="${ant.library.dir}">
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </copy>
        <unzip dest="${ant.library.dir}">
            <patternset includes="jdtCompilerAdapter.jar"/>
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </unzip>
    </target>
    <target description="compile project with Eclipse compiler" name="build-eclipse-compiler">
        <property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
        <antcall target="build"/>
    </target>
    <target name="FileUtil">
        <java classname="layout.component.FileUtil" failonerror="true" fork="yes">
            <classpath refid="AccountGenerator.classpath"/>
        </java>
    </target>
    <target name="New_configuration">
        <java classname="layout.component.PGenerator" failonerror="true" fork="yes">
            <classpath refid="AccountGenerator.classpath"/>
        </java>
    </target>
    <target name="PassWordGNLayout">
        <java classname="layout.component.PassWordGNLayout" failonerror="true" fork="yes">
            <classpath refid="AccountGenerator.classpath"/>
        </java>
    </target>
    <target name="PGenerator">
        <java classname="layout.component.PGenerator" failonerror="true" fork="yes">
            <classpath refid="AccountGenerator.classpath"/>
        </java>
    </target>
    <target name="PGNLayLayout">
        <java classname="layout.component.PGNLayLayout" failonerror="true" fork="yes">
            <classpath refid="AccountGenerator.classpath"/>
        </java>
    </target>
  	<target name="compile" depends="init">
		<javac srcdir="src" destdir="bin"/>
	</target>
    
	<target name="dist" depends="compile" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="dist"/>
		
		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="dist/pag-${DSTAMP}.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="layout.component.PGNLayLayout"/> 
			</manifest>
		</jar>
	</target>
	<target name="pagDeamon" depends="compile" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="dist"/>
	
	    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
	    <jar jarfile="dist/pagDeamon-${DSTAMP}.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="layout.component.PGenerator"/> 
			</manifest>
	    </jar>
	</target> 
	<target name="pag" depends="compile" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="dist"/>
		
		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="dist/pag-${DSTAMP}.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="layout.component.PGNLayLayout"/> 
			</manifest>
		</jar>
	</target>
</project>
